{
  "manifest_version": 3,
  "name": "Quran Extension",
  "version": "1.2",
  "description": "A Chrome extension for reading and listening to the Quran",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "sidePanel"],
  "host_permissions": ["https://api.alquran.cloud/*"],
  "side_panel": {
    "default_path": "popup.html"
  }
}